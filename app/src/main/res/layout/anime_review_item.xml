<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardBackgroundColor="@color/gray"
    android:layout_margin="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_review_anime"
            android:scaleType="fitCenter"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_review_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="By: "
            app:layout_constraintStart_toEndOf="@id/iv_review_anime"
            app:layout_constraintTop_toTopOf="@id/iv_review_anime"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_review_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:text="Username"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/tv_review_by_label"
            app:layout_constraintTop_toTopOf="@id/tv_review_by_label"/>

        <TextView
            android:id="@+id/tv_overall_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Overall:"
            app:layout_constraintBottom_toTopOf="@id/tv_overall_label"
            app:layout_constraintTop_toBottomOf="@id/tv_review_by_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>

        <TextView
            android:id="@+id/tv_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:text="9.0/10.10"
            app:layout_constraintStart_toEndOf="@id/tv_overall_label"
            app:layout_constraintTop_toTopOf="@id/tv_overall_label"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_story_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Story:"
            app:layout_constraintBottom_toTopOf="@id/tv_animation_label"
            app:layout_constraintTop_toBottomOf="@id/tv_overall_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>

        <TextView
            android:id="@+id/tv_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:text="9.0/10.10"
            app:layout_constraintStart_toEndOf="@id/tv_story_label"
            app:layout_constraintTop_toTopOf="@id/tv_story_label"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_animation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Animation:"
            app:layout_constraintBottom_toTopOf="@id/tv_enjoyment_label"
            app:layout_constraintTop_toBottomOf="@id/tv_review_by_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>

        <TextView
            android:id="@+id/tv_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:text="9.0/10.0"
            app:layout_constraintStart_toEndOf="@id/tv_animation_label"
            app:layout_constraintTop_toTopOf="@id/tv_animation_label"
            android:layout_marginStart="@dimen/_10sdp"/>
        <TextView
            android:id="@+id/tv_sound_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Sound:"
            app:layout_constraintBottom_toTopOf="@id/tv_character_label"
            app:layout_constraintTop_toBottomOf="@id/tv_animation_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>
        <TextView
            android:id="@+id/tv_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:text="9.0/10.0"
            app:layout_constraintStart_toEndOf="@id/tv_sound_label"
            app:layout_constraintTop_toTopOf="@id/tv_sound_label"
            android:layout_marginStart="@dimen/_10sdp"/>


        <TextView
            android:id="@+id/tv_character_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Character:"
            app:layout_constraintBottom_toTopOf="@id/tv_enjoyment_label"
            app:layout_constraintTop_toBottomOf="@id/tv_sound_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>

        <TextView
            android:id="@+id/tv_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:text="9.0/10.0"
            app:layout_constraintStart_toEndOf="@id/tv_character_label"
            app:layout_constraintTop_toTopOf="@id/tv_character_label"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_enjoyment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Enjoyment:"
            app:layout_constraintBottom_toBottomOf="@id/iv_review_anime"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>

        <TextView
            android:id="@+id/tv_enjoyment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:text="9.0/10.0"
            app:layout_constraintStart_toEndOf="@id/tv_enjoyment_label"
            app:layout_constraintTop_toTopOf="@id/tv_enjoyment_label"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_comment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_review_anime"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:text="Review"
            app:layout_constraintStart_toStartOf="@id/iv_review_anime"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textSize="@dimen/_10sdp"
            android:textStyle="italic"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_comment_label"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="left"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>