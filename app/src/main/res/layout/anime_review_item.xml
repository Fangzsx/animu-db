<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_200sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardBackgroundColor="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_review_anime"
            android:scaleType="fitCenter"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_review_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="By: "
            app:layout_constraintStart_toEndOf="@id/iv_review_anime"
            app:layout_constraintTop_toTopOf="@id/iv_review_anime"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_review_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:text="Username"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/tv_review_by_label"
            app:layout_constraintTop_toTopOf="@id/tv_review_by_label"/>

        <TextView
            android:id="@+id/tv_score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Score"
            app:layout_constraintBottom_toTopOf="@id/tv_overall_label"
            app:layout_constraintTop_toBottomOf="@id/tv_review_by_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>

        <TextView
            android:id="@+id/tv_overall_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Overall:"
            app:layout_constraintBottom_toTopOf="@id/tv_animation_label"
            app:layout_constraintTop_toBottomOf="@id/tv_score_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>
        <TextView
            android:id="@+id/tv_animation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Animation:"
            app:layout_constraintBottom_toTopOf="@id/tv_enjoyment_label"
            app:layout_constraintTop_toBottomOf="@id/tv_review_by_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>
        <TextView
            android:id="@+id/tv_sound_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Sound:"
            app:layout_constraintBottom_toTopOf="@id/tv_character_label"
            app:layout_constraintTop_toBottomOf="@id/tv_animation_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>
        <TextView
            android:id="@+id/tv_character_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Character:"
            app:layout_constraintBottom_toTopOf="@id/tv_enjoyment_label"
            app:layout_constraintTop_toBottomOf="@id/tv_sound_label"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>


        <TextView
            android:id="@+id/tv_enjoyment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Enjoyment:"
            app:layout_constraintBottom_toBottomOf="@id/iv_review_anime"
            app:layout_constraintStart_toStartOf="@id/tv_review_by_label"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>